{
  "manifest_version": 2,

  "name": "Nighteye | Simple Dark Browsing",
  "description": "Rest your eyes. Forces dark background and green terminal-like text on all web pages in simplest way possible.",
  "version": "0.2.2",

  "icons": {
    "48": "img/icon48.png",
    "128": "img/icon128.png" 
  },

  "browser_action": {
   "default_icon": "img/nighteye.png"
  },
  "background": {
    "scripts": ["js/controls.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"]
    }
  ],
  "web_accessible_resources": [
        "css/nighteye.css"
  ],
  "permissions": [
   "tabs",
   "activeTab",
   "storage",
   "http://*/*"
   ]
}